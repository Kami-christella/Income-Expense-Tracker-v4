@page
@model TaskForceApp.Pages.ExpenseTracker.AddIncomeModel
@{
}

<html>
    <body style="background-color:black;">
</br>
<h2></h2>
    <a href="/ExpenseTracker/AllIncome" class="btn btn-info btn-sm">Go Back</a>

<div class="container mt-5" >
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h2 class="text-center mb-4">Add Income</h2>
                    @if (Model.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }
                    @if (Model.SuccessMessage != null)
                    {
                        <div class="alert alert-success">@Model.SuccessMessage</div>
                    }
                    <form method="post">
                        <div class="form-group mb-3">
                            <label for="description"> Income Description</label>
                            <input type="text" class="form-control" id="description" name="description" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="password">Income Amount</label>
                            <input type="number" class="form-control" id="income" name="income" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="role">Account</label>
                            <select class="form-control" id="account" name="account" required>
                                <option value="">Select Account</option>
                                <option value="saving">Saving Account</option>
                                <option value="bank">Bank Account</option>
                                <option value="momo">Mobile Money</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>



